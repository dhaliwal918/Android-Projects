<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10sp"
    android:background="@drawable/background_outline"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10sp"
                android:text="37&#xb0;C" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFF8BE"
                android:text="03/03/2023" />
<!--            <TextView-->
<!--                android:id="@+id/timeTextView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="20sp"-->
<!--                android:layout_weight="1"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginBottom="10sp"-->
<!--                android:textColor="#FFF8BE"-->
<!--                android:text="00:00 AM" />-->
        </LinearLayout>

        <ImageView
            android:id="@+id/weatherStatusImg"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:paddingEnd="20sp"
            app:srcCompat="@drawable/cloudy" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5sp"
        android:background="#FF5722"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:paddingStart="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rainTextViewMM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginBottom="10sp"
                android:text="Rain : 00mm" />


            <TextView
                android:id="@+id/rainTextViewinP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginBottom="10sp"
                android:text="Rain : 00%" />
        </LinearLayout>

        <TextView
            android:id="@+id/showerTextViewMM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Shower : 00mm" />

        <TextView
            android:id="@+id/WindSpeedTextViewKMH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="WindSpeed : 00KMH" />

        <TextView
            android:id="@+id/WindDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Wind Direction : north weast esat" />

    </LinearLayout>




</LinearLayout>