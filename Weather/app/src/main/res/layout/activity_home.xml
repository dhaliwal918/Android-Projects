<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00093E"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="32sp"
            android:layout_height="37sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/white_location_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Use Current Location" />

        <ImageView
            android:id="@+id/searchImg"
            android:layout_width="32sp"
            android:layout_height="37sp"
            android:src="@drawable/search"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="4sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="1"
        android:contentDescription="@string/app_name">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000D58"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tempTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="80sp"
                        android:layout_marginStart="10sp"
                        android:text="37&#xb0;C" />

                    <TextView
                        android:id="@+id/dateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#FFF8BE"
                        android:text="03/03/2023" />
                    <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginBottom="10sp"
                        android:textColor="#FFF8BE"
                        android:text="00:00 AM" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/weatherStatusImg"
                    android:layout_width="300sp"
                    android:layout_height="150sp"
                    android:layout_weight="1"
                    android:paddingEnd="20sp"
                    app:srcCompat="@drawable/sun" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/rainTextViewinP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_outline"
                        android:text="Rain : 100%" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/rainTextViewinMM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_outline"
                        android:text="Rain : 5mm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/windSpeedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:layout_margin="10sp"
                        android:padding="10sp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_outline"
                        android:text="Wind Speed : 50Km/h" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/windDirectionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_margin="10sp"
                        android:padding="17sp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_outline"
                        android:text="Wind Direction : NorthWest" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/showerTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_margin="10sp"
                        android:padding="17sp"
                        android:textColor="@color/white"
                        android:background="@drawable/background_outline"
                        android:text="Shower : 10mm" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textViefw2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="4sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnHourly"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Hourly" />

        <TextView
            android:id="@+id/textVfiefw2"
            android:layout_width="4sp"
            android:background="@color/white"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/btnDaily"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Daily" />

    </LinearLayout>

</LinearLayout>